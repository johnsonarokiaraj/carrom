.container
  .row
    .col-md-12
      %table.table.table-hover.text-center
        - @matches.each_with_index do |m, index|          
          - if !m[0].empty?
            %tr.info
              %td(colspan="4")
                %b= m[0]

          %tr.warning
            %td(rowspan="2")= m[1]
            %td= m[2]
            %td Vs 
            %td= m[3]          
          %tr.white-bg
            %td= m[4]
            %td Vs 
            %td= m[5]
        
