<% if @player.present?%>
  <div class="name">
    <%= @player.name %>
  </div>

  <%= form_for :player, url: assign_player_path(@player.id), method: "put" do |f| %>
  <div class="form-group col-md-4">
    <label>Enter amount </label>
    <%= f.text_field :score, :class => "form-control" %>
  </div>
  <div class="form-group col-md-4">
    <label>Select Team</label>
    <select name ="player[team_id]" class="form-control">
      <% @team.each do |team| %>
        <option value="<%= team.id %>"><%= team.name.upcase%></option>
      <% end %>
    </select>
  </div>
  <div class="form-group col-md-4" style="padding-top: 25px;">
    <%= f.submit "Assign player", :class => "btn btn-primary" %>
  </div>
<% end %>
<% else %>
  <div class="name">
    Players bucket empty
  </div>
<% end %>
